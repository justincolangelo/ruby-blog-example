<div class="container">
    <div class="row">      
        <div class="col-md-12">
            <h1>Listing articles</h1>
     
            <ul>
                <% @articles.each do |article| %>
                    <li>
                        <h3><%= article.title %></h3>
                        <p><%= article.text %></p>
                        <div>
                            <%= link_to 'Show', article_path(article), {:class => 'btn btn-success'} %>
                            <%= link_to 'Edit', edit_article_path(article), {:class => 'btn btn-warning'} %>
                        </div>
                    </li>
                <% end %>
            </ul>
        </div>
    </div>
</div>